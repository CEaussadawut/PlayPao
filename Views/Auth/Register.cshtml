@{
    Layout = "~/Views/Shared/Auth/_Layout.cshtml";
    ViewData["Title"] = "Sing Up";
}

<div class="flex flex-col h-screen justify-center items-center gap-2">
    <div class="flex gap-1 items-center">
        <img src="~/images/icon.png" alt="icon" class="icon-theme">
        <h1>Play<span class="text-theme">Pao</span></h1>
    </div>

    <br>

    <form action="" class="flex flex-col gap-2 items-center">
        <h1>Create Account</h1>

        <input class="input-theme" type="text" id="username" placeholder="Username" />

        <input class="input-theme" type="password" id="password" placeholder="Password" />

        <input class="input-theme" type="confirm_password" id="confirm_password" placeholder="Confirm Password" />

        <button class="button-theme text-lg" type="submit">Sing Up!</button>
    </form>

    <p>Already have an account? <a asp-controller="Auth" asp-action="Login" class="text-theme">Sign in</a></p>
</div>
