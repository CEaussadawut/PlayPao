<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PlayPao</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/base/_position.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/base/_typography.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PlayPao.styles.css" asp-append-version="true" />
</head>

<body>
    <main role="main" class="relative">
        <div class="absolute top-2 left-2">
            <a asp-controller="Home" asp-action="Index">Back</a>
        </div>

        @RenderBody()
    </main>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
