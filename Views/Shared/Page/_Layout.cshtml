<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PlayPao</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/base/_width.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/base/_height.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/base/_padding.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/base/_margin.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/base/_position.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/base/_typography.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PlayPao.styles.css" asp-append-version="true" />
    <style>
        header {
            display: flex;
            flex-direction: column;
            gap: 2rem;

            margin-left: 2rem;
            margin-top: 1rem;
        }

        main {
            width: 1024px;
            margin-left: auto;
            margin-right: auto;

            padding-top: 2rem;
            padding-bottom: 2rem;
        }
    </style>
</head>

<body>

    <header>
        <div class="flex gap-0.5 items-center p-2 custom-margin">
            <img src="~/images/icon.png" alt="icon" class="icon-theme">
            <h2>Play<span class="text-theme">Pao</span></h2>
        </div>

        <a asp-controller="Home" asp-action="Index" style="color: black; text-decoration: none;"
            class="w-fit flex gap-0.5 button-white px-1 py-0.5 rounded-lg">
            <i data-lucide="arrow-left"></i>
            <span>Back</span>
        </a>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>
    <script>
        lucide.createIcons();
    </script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>