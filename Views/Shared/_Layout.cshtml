<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PlayPao</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/base/_position.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/base/_typography.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PlayPao.styles.css" asp-append-version="true" />
    <style>
        header {
            width: 250px;
            padding: 16px;
        }

        main {
            width: 100%;
        }

        aside {
            width: 250px;
            padding: 16px;
        }
    </style>
</head>

<body class="flex">
    <header>
        <nav class="flex flex-col">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">PlayPao</a>
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    @* <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - PlayPao - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer> *@

    <aside>
        <p>OK</p>
    </aside>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>