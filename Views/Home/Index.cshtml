}

<div class="flex flex-col gap-1 text-center">
    <div class="flex items-center gap-1">
        <input class="input-theme-full" type="text" placeholder="Search">
        <a href="#">
            <i data-lucide="bell"></i>
        </a>
    </div>

    @for (int i = 0; i < 10; i++)
